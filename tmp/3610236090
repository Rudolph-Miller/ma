$(function() {
    var msnry = null;
    var hasBlocks = $('.blocks').length > 0;
    var masonrize = function(width) {
        if (width > 980) {
            if (!hasBlocks) {
                $('.post').removeClass('main_lane_wrapper');
            } else if (!msnry) {
                msnry = $('.blocks').masonry({
                    itemSelector: '.block',
                    transitionDuration: 0
                });
                $('.blocks').removeClass('main_lane_wrapper');
                console.log('masonry initialized');
            } else {
                $('.blocks').removeClass('main_lane_wrapper');
            }
        } else {
            if (!hasBlocks) {
                $('.post').addClass('main_lane_wrapper');
            } else if (msnry) {
                $('.blocks').masonry('destroy');
                $('.blocks').addClass('main_lane_wrapper');
                console.log('masonry destroyed');
                msnry = null;
            } else {
                $('.blocks').addClass('main_lane_wrapper');
            }
        }
    };
    masonrize($(window).width());
    $(window).on('resize', function() {
        masonrize($(window).width());
    });
    $(window).on('orientationchange', function() {
        masonrize($(window).width());
    });
    if ($('.fb-like-box-wrapper').length > 0) {
        var timer = false;
        var wrapperWidth = $('.fb-like-box-wrapper').width();
        $(window).on('load resize', function(e) {
            if (timer !== false) {
                clearTimeout(timer);
            }
            if (e.type === 'resize' && wrapperWidth === $('.fb-like-box-wrapper').width()) {
                return;
            }
            timer = setTimeout(function() {
                wrapperWidth = $('.fb-like-box-wrapper').width();
                $('.fb-like-box-wrapper').html('<div class="fb-like-box" ' + 
                    'data-href="https://www.facebook.com/insnext.ja" ' +
                    'data-width="' + wrapperWidth + '" data-show-faces="true" ' +
                    'data-stream="false" data-header="false" data-show-border="false"></div>');
                FB.XFBML.parse();
            }, 200);
        });
    }
});
