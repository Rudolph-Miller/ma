				var ad = ads[adIdxIb];
				try{
					if (ad && ad.creative) {
						var content = ad.creative;
						var adLen = content.title.length;
						
						//ad info
						title = content.title[0];
						displayUrlText = content.destinationUrl;
						clickUrl = ad.clickUrl;
						imageSrc = content.images[adIdxIb].source;
