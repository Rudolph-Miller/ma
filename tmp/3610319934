			}else if (i === ibR && adDataIb.searchResult.spaces[0].ads.length >= 1) {
				//
				// IBAds at these positions
				//
				isAd = true;
				itemClass = 'recsItem adIb';
				linkTarget = '_blank';
				if (adDataIb.searchResult.spaces && adIdxIb >= adDataIb.searchResult.spaces[0].ads.length) {
					continue;
