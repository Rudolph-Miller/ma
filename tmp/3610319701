<script type="text/javascript">
var pcview = false;
if(document.cookie){
	var cookies = document.cookie.split(";");
	for(var n in cookies){
		if(cookies[n].indexOf("pcview=")>=0){
			pcview=cookies[n].split("=")[1]=="true";
		}
	}
}
var ua = navigator.userAgent;
var ref = ((document.referrer.replace("http://","")).replace("https://",""));
ref = ref.slice(0, ref.indexOf("/"));
if(pcview==false && location.pathname.indexOf("/upload_files/") != 0){
	if (ua.indexOf('iPhone') > 0 && ua.indexOf("FBID/tablet") == -1 || ua.indexOf('iPod') > 0 && ua.indexOf("FBID/tablet") == -1 || (ua.indexOf('Tablet') == -1 && ua.indexOf('Android') > 0 && ua.indexOf('Mobile') > 0) || ua.indexOf('blackberry') > 0 || ua.indexOf('IEMobile') > 0) {
		if(ref!=""){
			location.replace(location.protocol + "//" + location.hostname + "/sp" + location.pathname + "?r=" + ref + location.search.replace("?","&"));
		}else{
			location.replace(location.protocol + "//" + location.hostname + "/sp" + location.pathname + location.search);
		}
	}else if(ua.indexOf('iPad') > 0 || ua.indexOf('FBID/tablet') > 0 || ua.indexOf('Android') > 0 && ua.indexOf('mobile') == -1){
		if(ref!=""){
			location.replace(location.protocol + "//" + location.hostname + "/a" + location.pathname + "?r=" + ref + location.search.replace("?","&"));
		}else{
			location.replace(location.protocol + "//" + location.hostname + "/a" + location.pathname + location.search);
		}
	}
}
var spView = new Object();
spView.goToSPSite = function(){}
spView.checkUA = function(){
	if(ua.indexOf('iPhone') > 0 && ua.indexOf("FBID/tablet") == -1 || ua.indexOf('iPod') > 0 && ua.indexOf("FBID/tablet") == -1 || (ua.indexOf('Tablet') == -1 && ua.indexOf('Android') > 0 && ua.indexOf('Mobile') > 0) || ua.indexOf('blackberry') > 0 || ua.indexOf('IEMobile') > 0){
		spView.goToSPSite = function(){
			document.cookie = "pcview=false; expires=Tue, 31-Dec-2030 23:59:59; path=/;";
			location.href = location.protocol + "//" + location.hostname + "/sp" + location.pathname;
		}
		var button = document.createElement("div");
		button.innerHTML = '<a href="javascript:spView.goToSPSite();">スマートフォン版へ</a>';
		button.setAttribute("class", "spViewButton");
		document.getElementsByTagName("body")[0].appendChild(button);
		var overrideCSS = document.createElement('style');
		overrideCSS.type = "text/css";
		overrideCSS.innerText = ".spViewButton{width: 100%;margin-top: 41px;text-align: center;padding: 30px 0; font-size: 60px;background-color: #3697b3;}.spViewButton a {color: #fff;}";
		document.getElementsByTagName('head')[0].appendChild(overrideCSS);
	}
}
if(document.addEventListener && location.pathname.indexOf("/upload_files/") != 0){
	document.addEventListener("DOMContentLoaded", spView.checkUA, false);
}
</script>
