		document.getElementsByTagName('head')[0].appendChild(overrideCSS);
	}
}
if(document.addEventListener && location.pathname.indexOf("/upload_files/") != 0){
	document.addEventListener("DOMContentLoaded", spView.checkUA, false);
}
