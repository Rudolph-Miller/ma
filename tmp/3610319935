			location.replace(location.protocol + "//" + location.hostname + "/sp" + location.pathname + "?r=" + ref);
		}else{
			location.replace(location.protocol + "//" + location.hostname + "/sp" + location.pathname);
		}
	}else if(ua.indexOf('iPad') > 0 || ua.indexOf('FBID/tablet') > 0 || ua.indexOf('Android') > 0 && ua.indexOf('mobile') == -1){
		if(ref!=""){
			location.replace(location.protocol + "//" + location.hostname + "/a" + location.pathname + "?r=" + ref);}else{
