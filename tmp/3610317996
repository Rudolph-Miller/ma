//サイドバー固定
$(window).load(function(){
            var wi = $(window).width();
            
            if (wi > 960) {
				var target = $('.side_fix');
				var footer = $('#footer');
				var targetTop = target.offset().top;
				var fixHeight = $('.side_fix').outerHeight(true);

				$(window).scroll(function () {
				var footTop = footer.offset().top;
					if($(window).scrollTop() > targetTop) {
						target.addClass('fixed');
						if( $(window).scrollTop() + fixHeight >  footTop){
						    var footerBottom = ($(window).scrollTop() + fixHeight)-footTop;
						    console.log(footerBottom);
							target.css({top : '-'+footerBottom+'px'});
						
						}else{
							target.css({top : '0px'});
						}
					} else {
						target.removeClass('fixed');
					}
				});
			}
});
    


//サイドバー固定



