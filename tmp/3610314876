                    <script language="javascript" type="text/javascript">
                    // <!CDATA[
                        var nkmmInitVal;
                        var alertMsg;
                        
                        alertMsg = 'キーワードや証券コードを入力してください。'
                        
                        
                        window.onload = function nkmmInit(){
                            if(typeof(document.getElementById("SEARCH_QUERY")) != 'undefined'){
                                nkmmInitVal = document.getElementById("SEARCH_QUERY").value;
                            }
                        }
                       
                        function nkmmPush(buttonmei) {

                            var objForm = document.getElementById("frmSearchBox");
                            var objTBox = document.getElementById("SEARCH_QUERY");

                            if(typeof(nkmmInitVal) != 'undefined' && nkmmInitVal ==  objTBox.value){
                                window.alert(alertMsg);
                                document.getElementById("SEARCH_QUERY").focus();
                                return false;
                            }

                            var len = objTBox.value.length;

                            if (len <= 0) {
                                window.alert(alertMsg);
                                document.getElementById("SEARCH_QUERY").blur();
                                document.getElementById("SEARCH_QUERY").focus();
                                return false;
                            }

                            if (buttonmei == 'kabusiki') {
                                document.getElementById("SEARCH_QUERY").name = "F";
                                document.getElementById("prm").name = "prm";
                                objForm.method="post";
                                objForm.action="http://www.nikkei.com/markets/company/search.aspr";
                            }

                            if (buttonmei == 'kiji') {
                                document.getElementById("SEARCH_QUERY").name = "searchKeyword";
                                objForm.method="get";
                                objForm.action="http://www.nikkei.com/search/site/t=0";
                            }

                            document.getElementById("frmSearchBox").submit();
                        }
                    // ]]>
                    </script>
                    <form action="" onsubmit="return nkmmPush('kabusiki')" id="frmSearchBox" accept-charset="UTF-8">
                        
                        <input type="text" maxlength="50" value="" id="SEARCH_QUERY" class="bsc-input_text JSID_key_input JSID_actFormHint cmn-default">
                        <input type="submit" value="株価" alt="株価検索（無料）" title="株価検索（無料）" class="bsc-stock JSID_actFormSubmit" onclick="nkmmPush('kabusiki'); return false;" /><input type="submit" value="記事" alt="記事検索" title="記事検索" class="bsc-article" onclick="nkmmPush('kiji'); return false;" />
                        <input type="hidden" id="prm" value="nikkeimoney/open_list" />
                    </form>
                    
                </li>
